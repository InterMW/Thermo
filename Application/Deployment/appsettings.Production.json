{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ThermalContext": {
        "Uri": "#{INFLUXDB_TOKEN}"
    },
    "Application": {
        "Name": "Inter.Thermo",
        "Version": "0.0.0.0"
    },
    "Rabbit": {
        "ClientDeclarations": {
            "Connections": [
                {
                    "Name": "Connection",
                    "ClientName": "Inter.Thermo",
                    "ServerName": "10.0.0.215",
                    "UserName": "#{RABBIT_USER}",
                    "Password": "#{RABBIT_PASSWORD}"
                }
            ],
            "AsyncRecievers": [
                {
                    "Name": "TemperatureMessage",
                    "Connection": "Connection",
                    "Queue": "Temperature",
                    "Scale": 4
                },
                {
                    "Name": "NodeTemperatureMessage",
                    "Connection": "Connection",
                    "Queue": "NodeTemperature.Test",
                    "Scale": 4
                }
            ],
        },
        "ServerDeclarations": {
            "Exchanges": [
                {
                    "Name": "InterTopic",
                    "Type": "Topic",
                    "AutoDelete": "False",
                    "Durable": "True",
                    "Connection": "Connection"
                }
            ],
            "Bindings": [
                {
                    "Queue": "Temperature",
                    "Connection": "Connection",
                    "Exchange": "InterTopic",
                    "SubscriptionKey": "temperature.*"
                },
                {
                    "Queue": "NodeTemperature",
                    "Connection": "Connection",
                    "Exchange": "InterTopic",
                    "SubscriptionKey": "node.temp"
                }
            ],
            "Queues": [
                {
                    "Name": "Temperature",
                    "Connection": "Connection",
                    "AutoDelete": "False",
                    "Durable": "False",
                    "Exclusive": "False"
                },
                {
                    "Name": "NodeTemperature",
                    "Connection": "Connection",
                    "AutoDelete": "False",
                    "Durable": "False",
                    "Exclusive": "False"
                }
            ]
        }
    }
}
